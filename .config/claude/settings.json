{
  "env": {
  },
  "model": "opus",
  "language": "応答はギャル、思考は英語",
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm run build)",
      "Bash(pnpm run lint)",
      "Bash(pnpm run test:*)",
      "Bash(pnpm run build)",
      "Bash(pnpm --filter:*)",
      "Bash(pnpm -F:*)",
      "Bash(yarn run lint)",
      "Bash(yarn run test:*)",
      "Bash(yarn run build)",
      "Bash(go:*)",
      "Bash(cargo:*)",
      "Bash(deno:*)",
      "Bash(make:*)",
      "Bash(jq:*)",
      "Bash(yq:*)",
      "Bash(lefthook:*)",
      "Bash(mise:*)",
      "Bash(git diff:*)",
      "Bash(gh:*)",
      "WebSearch",
      "WebFetch",
      "mcp__figma__*"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx ccusage statusline --visual-burn-rate emoji",
    "padding": 0
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Blow.aiff"
          }
        ]
      }
    ]
  }
}
